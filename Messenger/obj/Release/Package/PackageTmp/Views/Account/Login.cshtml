@model Messenger.Models.UserAccessViewModels
@{
    ViewBag.Title = "Login";
}

<div id="Container" class="col-xs-12 col-sm-12 col-md-12">
    <div id="texts">
        <h1 class="text-primary text-center">TBT Live Messenger <small>Beta</small></h1>
        <div class="row">
            <div class="col-xs-12">
                <img class="col-lg-2 col-md-2 col-sm-2 col-xs-4 col-sm-offset-5" id="imgAvatar" src="~/Images/Resources/signin_avatar_default.png" />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h3 class="text-center" id="subtitle1">Sign in</h3>
                <h5 class="text-center" id="subtitle2">Sign in with you TBT Live Messenger. Don't have one? @Html.ActionLink("Sign up", "SignUp")</h5>
            </div>
        </div>
        <br />
    </div>

    <div id="loginControls" class="col-lg-4 col-md-4 col-lg-offset-4 col-md-offset-4 col-sm-5 col-sm-offset-3">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { role = "form" }))
        {
            <div class="form-group">
                @Html.TextBoxFor(x => x.User, new { @class = "form-control", placeholder = "Example555@Hotmail.com" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Enter your password" })
            </div>
            <input class="btn btn-primary col-sm-offset-5" id="buttonLogin" type="submit" value="Sign in"  />
        }
    </div>

    @section Footer{
    <p class="text-center hidden-xs hidden-sm" id="ftext">All major design are inspired in Windows Live Messenger which nowadays is <a href="#">Skype</a>. This project was developed by @Html.ActionLink("us", "About", "Account"). Need help? click <a href="~/help.html">here</a></p>
    }
</div>


