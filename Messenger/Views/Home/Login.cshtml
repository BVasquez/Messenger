@model Messenger.Models.UserAccessViewModels
@{
    ViewBag.Title = "Login";
}

    <div class="col-md-12 col-md-offset-3">
        <h2 class="text-primary">Welcome to Live Messenger- Beta</h2>
        <br />
    </div>

    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "col-md-5 col-md-offset-4" }))
            {
                <div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.User, new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.User, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Password, new { @class = "control-label" })
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                    </div>
                    <br />
                    <input type="submit" value="Acceder" class="btn btn-primary" />
                </div>
            }
        </div>
    </div>

