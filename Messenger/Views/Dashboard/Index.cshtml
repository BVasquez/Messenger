@model IEnumerable<Messenger.Models.UserViewModels>
@{
    ViewBag.Title = "Index";
}



<div id="UserContainer">
    <img id="UserImg" src="~/Images/Resources/signin_avatar_default.png" />
    <div id="UserInfo">
        <h3>@ViewBag.CurrentUserName <small>(Available)</small></h3>
        <p>Any Status Message here...</p>
    </div>
</div>
<div>
    <div class="form-group ">
        <div class="input-group">
            <div class="input-group-addon">
                <span class="glyphicon glyphicon-search"></span>
            </div>
            <input type="text" class="form-control" placeholder="Find a contact or more" />
        </div>
    </div>
</div>

<br/>
<h3>Friends</h3>

<div id="FriendList">
    @foreach (var friend in Model)
    {
        <h4>@Html.ActionLink(string.Format("{0} {1}", friend.FirstName, friend.LastName), "Friend", "Conversation", new { userFrom = ViewBag.CurrentUser, userTo = friend.UserId }, null)</h4>
    }
</div>




<style>
    header, body {
        background-image: url('../../Images/Resources/windowlive_header_bkg.png');
        background-size: cover;
        background-position: left top;
        background-repeat:no-repeat;
        height: 150px;
    }

    #UserImg { 
        width: 75px;
        margin-top: 12px;
        margin-right: 10px;
    }

    #UserContainer {
        width: 100%;
        height: 150px;
    }

    #UserInfo, #UserImg{
        float:left;
    }

    #UserInfo{
        width: 500px;
    }

    #FriendList{
        float:none;
    }

</style>
