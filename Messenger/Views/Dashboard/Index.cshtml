@model IEnumerable<Messenger.Models.UserViewModels>
@{
    ViewBag.Title = "Index";
}



<div id="UserContainer">
    <img id="UserImg" src="~/Images/Resources/signin_avatar_default.png" />
    <div id="UserInfo">
        <h3>@ViewBag.CurrentUserName <small>(Available)</small></h3>
        <p>Any Status Message here...</p>
    </div>
</div>
<div id="userTools">
    <input id="FindContact" type="text" class="form-control" placeholder="Find a contact or more" />
    <img src="~/Images/Resources/cardAction_addMessenger.png" />
</div>


<div id="FriendList">
    <h3>Friends</h3>
    <div class="list-group">
        @foreach (var friend in Model)
        {
            @Html.ActionLink(string.Format("{0} {1}", friend.FirstName, friend.LastName), "Friend", "Conversation", new { userFrom = ViewBag.CurrentUser, userTo = friend.UserId },new { @class="list-group-item" })
        }
    </div>
</div>




<style>
    header, body {
        background-image: url('../../Images/Resources/windowlive_header_bkg.png');
        background-size: cover;
        background-position: left top;
        background-repeat:no-repeat;
        height: 150px;
    }

    #UserImg { 
        width: 75px;
        margin-top: 12px;
        margin-right: 10px;
    }

    #UserContainer {
        width: 100%;
        height: 100px;
    }

    #UserInfo, #UserImg{
        float: left;
    }

    #UserInfo{
        width: 500px;
    }

    #FriendList{
        float: none;
    }

    #FindContact{

        max-width: 1000px;
        width: 80%;

        border: 1px solid black;
        float: left;
    }

    #userTools{
        border-top-color: #dbe9ff;
        border-top-style: solid;
        border-top-width: 1px;
        border-bottom-color: #dbe9ff;
        border-bottom-style: solid;
        border-bottom-width: 1px;
        padding-top: 10px;
        padding-bottom: 10px;
        height: 55px;
        width: 100%;
    }

    #userTools img{
        float: left;
        margin-top: 2px;
        margin-left: 10px;
        width: 30px;
    }


    #FriendList
    {
        border: 1px solid #dbe9ff;
        border-top-width: 0;
        width: 100%;
        height: 500px;
    }


</style>
