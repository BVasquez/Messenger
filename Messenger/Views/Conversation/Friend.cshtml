<script>
    $(function () {
        var chat = $.connection.chatHub;
        chat.client.Hello = function (usermessage) {
            $("#ConversationBoard").append("<p class='userSaysName' data-userSaysId='@userto'>@Helper.getUser(userfrom)</p><p class='userSaysMessage'>" + usermessage + "</p>");
        };
        $.connection.hub.start().done(function () {
            $("#ButtonSender").click(function () {
                chat.server.hello($("#Message").val());
            });
        });

        $(".userSaysName").css('color', 'red');
        $(".userSaysName[data-userSaysId='@userfrom']").css('color', 'blue');
    });
</script>
