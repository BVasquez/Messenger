    $(function () {

        var chat = $.connection.chatHub;
        chat.client.Hello = function (name, usermessage) {
            $("#ConversationBoard").append("<p class='userSaysName' data-userSaysId='@userto'>@Helper.getUser(userfrom)</p><p class='userSaysMessage'>"+ message +"</p>");
        };
        $.connection.hub.start().done(function () {
            $("#ButtonSender").click(function () {
                chat.server.hello(name, $("#Message").val());
            });
        });

        $(".userSaysName").css('color', 'red');
        $(".userSaysName[data-userSaysId='@userfrom']").css('color', 'blue');

